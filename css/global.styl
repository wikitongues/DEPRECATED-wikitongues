/* general styles */

body
  color $deepBlue
  font-family $serif
  font-size 11pt
  background $whiteAlternate

  .inner-wrap
    position relative
    width 100%
    height 100%

  .content-wrap
    width 90%
    max-width 1440px
    margin 0 auto
    display block
    height 100%
    padding 80px 0
    box-sizing border-box

  >.content-wrap
    a
      color black
      text-decoration none
      padding 0px 3px
      margin 0 -3px
      box-shadow 0 -5px 0 $yellow inset
      font-variant small-caps
      text-transform lowercase
      transition background-color .2s ease

      &:hover
        background-color lighten(#ffc328, 30%)

.clear
  clear both

a, a:visited
  text-decoration none

h1, h2, h3, h4, h5
  font-family $sansSerif !important

/* call to action component */

div.cta-section
  margin-top 20px
  padding 100px 0
  text-align center
  transition background .2s ease-in-out
  border-bottom 3px solid #FFAFBD
  border-top 1px solid #eaeff0
  background #FFAFBD /* fallback for old browsers */
  background -webkit-linear-gradient(135deg, #FFAFBD , #ffc3a0) /* Chrome 10-25, Safari 5.1-6 */
  background linear-gradient(135deg, #FFAFBD , #ffc3a0) /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

  h1, p
   margin 0 auto

  h1
   max-width 750px
   color white
   text-shadow 0 1px 2px rgba(0,0,0,.15)

  a.cta-button
   display block
   max-width 300px
   background $lightBlue
   box-shadow 0 1px 0 #336FB0
   border-top 1px solid #68ABFD !important
   border-radius 2.5px
   padding 25px
   margin 50px auto
   font-size 20px
   letter-spacing 0.7px
   color $white
   font-family $sansSerif
   font-weight 900
   text-align center

  a.cta-secondary
   color white
   font-style italic
   display inline-block

   &::after
     content ""
     width 100%
     height 3px
     background #ffcccc
     margin-top -4px
     display block

/* page banners */

.page-banner
  position relative
  height 100vh
  box-sizing border-box
  color #fff
  font-family $sansSerif
  white-space nowrap
  overflow-x scroll
  overflow-y hidden
  font-size 0

  h1
   line-height 1.25em
   transition font-size .2s ease-in-out

  .carousel-slide
   display inline-block
   position relative
   width 100%
   height 100%
   box-shadow 0px -3px 0 #bd202f inset

   &:first-of-type
     float left

   &.banner-video
     background-size cover !important
     background-position center center
     background-repeat no-repeat
     overflow hidden
     box-shadow 0px -3px 0 #bd202f inset

     #video
      position absolute
      top 50%
      left 50%
      webkit-transform translate(-50%, -50%)
      moz-transform translate(-50%, -50%)
      transform translate(-50%, -50%)
      width auto !important
      height auto
      min-width 101%
      min-height 101%

     .video-caption
      position absolute
      bottom 100px
      right 80px
      text-align right
      font-size 5rem
      margin 0
      text-shadow 1px 1px rgba(0,0,0,0.1)

   &.banner-text
     h1
      white-space normal
      display inline-block
      margin 0
      font-size 6rem
      line-height .97
      width 100%

      span
        float left
        line-height 3

      a
        clear both
        font-size 4rem
        color white
        float right
        font-style italic
        font-weight 100
        display block
        font-family $serif

    &.banner-image
     background-position center center
     background-repeat no-repeat;
     background-size cover

    .title
      margin 0
      position absolute
      color $white
      bottom 80px
      right 40px
      font-size 4rem
      text-align right
      text-shadow 0 0 30px #11242f
      line-height 1em

    .meta
      margin 0
      position absolute
      bottom 0
      right 0
      width 100%
      font-size .8rem
      white-space normal
      text-align left
      color #6a7086
      box-sizing border-box
      padding 15px 25px
      background $white
      font-family $serif
      font-style italic

      .credit
         float right
         color #9b9faf


  span
    &.banner-counter
      width 15px
      height 15px
      background-color white
      display block
      position absolute
      bottom 30px
      left 30px
      z-index 2
      border-radius 2px
      opacity .4
      cursor pointer
      border 2px solid white

      &.active
        opacity .8

      &:last-of-type
        left 55px

      &::after
        position absolute
        width 15px
        height 15px
        background blue

/* section header */

.info-header, .page-header
  position relative
  width 75%
  max-width 650px
  margin 50px auto 0
  padding 50px

  ::before
   content ""
   width 50%
   height 1px
   position absolute
   top 0
   left 50%
   transform translateX(-50%)
   background $lightGrey

  ::after
   content ""
   width 50%
   height 1px
   position absolute
   bottom 0
   left 50%
   transform translateX(-50%)
   background $lightGrey

  h1
   font-family $serif !important
   text-align center

/* page builder classes */

.content-wrap
  .info-header
   width 66%
   max-width 650px
   margin auto

   p
     font-size 1.25em

  .pull-quote
   position relative
   width 75%
   max-width 650px
   margin 0 auto
   padding 50px

   ::before, ::after
     content ""
     width 50%
     height 1px
     position absolute
     top 0
     left 50%
     transform translateX(-50%)
     background $lightGrey

    ::after
      top initial
      bottom 0

   h1
     font-family $serif !important
     text-align center

  .textwidget
   p:first-of-type, h2:first-of-type
     margin-top 0

/* donate banner */

.donate-banner
  position fixed
  width 100%
  bottom 0
  padding 15px 30px
  box-sizing border-box
  background $blueGrey
  font-family $sansSerif

  .close-button
   position absolute
   padding 0
   top 0
   right 0
   border 0
   background none
   font-size 2em

   &:focus
     outline none

@media all and (max-height:700px)
  .page-banner
   h1
     font-size 4.5rem !important


@media all and (max-width:1300px) and (min-width:981px)
  .page-banner
   h1
     font-size 4.5rem !important

@media all and (max-width:980px) and (min-width:841px)
  .page-banner
   h1
     font-size 3.5rem !important

@media all and (max-width:840px) and (min-width:641px)
  .page-banner
   h1
     font-size 2.5rem !important

@media all and (max-width:640px)
  /* general styles */
  html
    overflow-x hidden

  body
    overflow hidden
    font-size 9pt

    // Banner position
    &.page-id-16
      .page-banner
        .carousel-slide.banner-video
          background-position 35% center

    &.page-id-22
      .page-banner
        .carousel-slide.banner-image
          background-position 70% center

    &.page-id-24
      .page-banner
        .carousel-slide.banner-image
          background-position 20% center

    &.page-id-57
      .page-banner
        .carousel-slide.banner-image
          background-position 85% center

    &.page-id-193
      .page-banner
        .carousel-slide.banner-image
          background-position 13% center

    &.page-id-195
      .page-banner
        .carousel-slide.banner-image
          background-position 5% center

  .content-wrap
   margin-top 20px
   padding-bottom 0 !important

  /* page banners */

  .page-banner
   height 90vh !important

   h1
     width initial !important
     font-size 2.7rem !important

     span
       margin-top 2em
       font-size 3rem

   i
     font-size 2rem !important

   .carousel-slide
     box-sizing border-box
     &.banner-text
        padding 70px 0

        h1
          span
            line-height .97

     &.banner-video
      background-size cover !important

      #video
        display none

      .video-caption
        bottom 70px
        right 30px

     &.banner-image
      .title
        bottom 120px

      .caption
        font-size .8rem

      i
        display none !important

  /* section header */

  .info-header, .page-header
   padding 20px 0
   width 90%
   margin 20px auto 40px

  .page-header
    .page-header-content
      h1
        font-size 1.2rem !important
        text-align left

  /* page builder classes */

  .content-wrap
    padding-top 0 !important

   .panel-grid-cell
     margin-bottom 20px !important

   .panel-grid
     margin-bottom 20px !important

   .pull-quote
     width 100% !important
     padding 20px 0 !important

   .info-header
     margin-top 50px !important
     width 100%


  /* CTA section */

  .cta-section
    padding 40px 10% 40px !important
    background $offwhite
    border-top 1px solid $lightGrey