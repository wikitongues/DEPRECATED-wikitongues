/* general styles */

body
	padding-top 50px
	color $deep_blue
	font-family $serif
	font-size 11pt

.inner-wrap 
	position relative
	width 100%
	height 100%
	
.content-wrap
	width 90%
	max-width 1440px
	margin 100px auto
	
.clear
	clear both

a, a:visited
	text-decoration none
	
h1, h2, h3, h4, h5
	font-family $sans_serif !important

/* call to action component */

div.cta-section
	padding 100px 0
	text-align center
	-webkit-transition background .2s ease-in-out
	-moz-transition background .2s ease-in-out
	-o-transition background .2s ease-in-out
	-ms-transition background .2s ease-in-out
	transition background .2s ease-in-out
	
	&:hover
		background $offwhite
	
	h1, p
		margin 0 auto
		
	h1
		max-width 750px

	a.cta-button
		display block
		max-width 300px
		background $light_blue
		box-shadow 0 1px 0 #336FB0
		border-top 1px solid #68ABFD !important
		border-radius 2.5px
		padding 25px
		margin 50px auto
		font-size 20px
		letter-spacing 0.7px
		color $white
		font-family $sans_serif
		font-weight 900
		text-align center
	
	a.cta-secondary
		color $deep_blue
		font-style italic
		
		&:hover
			border-bottom 1px solid $deep_blue
	

	
/* page banners */

.page-banner
	position relative
	height 85vh
	box-sizing border-box
	color #fff
	font-family $sans_serif
	white-space nowrap
	overflow-x scroll
	overflow-y hidden
	font-size 0
	// background-size cover !important
	
	h1
		line-height 1.25em
		-webkit-transition font-size .2s ease-in-out
		-moz-transition font-size .2s ease-in-out
		-ms-transition font-size .2s ease-in-out
		-o-transition font-size .2s ease-in-out
		transition font-size .2s ease-in-out
		
	.carousel-slide
		display inline-block
		position relative
		width 100%
		height 100%
	
		&.banner-video
			overflow hidden
			
			#video
				position absolute
				top 50%
				left 50%
				webkit-transform translate(-50%, -50%)
				moz-transform translate(-50%, -50%)
				transform translate(-50%, -50%)
				width auto !important
				height auto
				min-width 101%
				min-height 101%
			
			.video-caption
				position absolute
				bottom 100px
				right 80px
				text-align right
				font-size 5rem
				margin 0
		
		&.banner-text
			h1
				position absolute
				top 50%
				-webkit-transform translateY(-50%)
				-moz-transform translateY(-50%)
				transform translateY(-50%)
				width 33%
				max-width 550px
				margin 0
				// font-size 3rem
				font-size 6rem
		
		&.banner-image
			.title
				margin 0
				position absolute
				color $white
				bottom 80px
				right 40px
				font-size 5rem
				text-align right
				text-shadow 0 0 30px #11242f
				
			.caption
				margin 0
				position absolute
				bottom 0
				right 0
				width 100%
				font-size 1rem
				white-space normal
				text-align left
				color $deep_blue
				box-sizing border-box
				padding 15px 25px
				background $white
				font-family $serif
				font-style italic

	i.fa
		display none
		position absolute
		z-index 10
		font-size 5rem
		top 50%
		webkit-transform translateY(-50%)
		moz-transform translateY(-50%)
		transform translateY(-50%)
		opacity .3
		-webkit-transition opacity .2s ease-in-out;
		-moz-transition opacity .2s ease-in-out;
		-o-transition opacity .2s ease-in-out;
		-ms-transition opacity .2s ease-in-out;
		transition opacity .2s ease-in-out;
		
		&.slide-forward
			right 20px
		
		&.slide-back
			left 20px
		
		&.slide-down
			top initial
			left 50%
			bottom 20px
			webkit-transform translate(-50%, 0)
			moz-transform translate(-50%, 0)
			transform translate(-50%, 0)
			
		&:hover
			opacity 1
			cursor pointer

/* section header */

.info-header, .page-header
	position relative
	width 75%
	max-width 650px
	margin 100px auto 0
	padding 50px

	::before
		content ""
		width 50%
		height 1px
		position absolute
		top 0
		left 50%
		-webkit-transform translateX(-50%)
		-moz-transform translateX(-50%)
		transform translateX(-50%) 
		background $light_grey
		
	::after
		content ""
		width 50%
		height 1px
		position absolute
		bottom 0
		left 50%
		-webkit-transform translateX(-50%)
		-moz-transform translateX(-50%)
		transform translateX(-50%) 
		background $light_grey

	h1
		font-family $serif !important
		text-align center

/* page builder classes */

.content-wrap
	.info-header
		width 66%
		max-width 650px
		margin auto
		
		p
			font-size 1.25em
	
	.pull-quote
		position relative
		width 75%
		max-width 650px
		margin 0 auto
		padding 50px
		
		::before
			content ""
			width 50%
			height 1px
			position absolute
			top 0
			left 50%
			-webkit-transform translateX(-50%)
			-moz-transform translateX(-50%)
			transform translateX(-50%) 
			background $light_grey
			
		::after
			content ""
			width 50%
			height 1px
			position absolute
			bottom 0
			left 50%
			-webkit-transform translateX(-50%)
			-moz-transform translateX(-50%)
			transform translateX(-50%) 
			background $light_grey
		
		h1
			font-family $serif !important
			text-align center
		
	.textwidget
		p:first-of-type, h2:first-of-type
			margin-top 0
		
/* donate banner */

.donate-banner
	position fixed
	width 100%
	bottom 0
	padding 15px 30px
	box-sizing border-box
	background $blue_grey
	font-family $sans_serif
	
	.close-button
		position absolute
		padding 0
		top 0
		right 0
		border 0
		background none
		font-size 2em 
		
		&:focus
			outline none
			
@media all and (max-height:700px)
	.page-banner
		h1
			font-size 4.5rem !important


@media all and (max-width:1300px) and (min-width:981px)
	.page-banner
		h1
			font-size 4.5rem !important

@media all and (max-width:980px) and (min-width:841px)
	.page-banner 
		h1
			font-size 3.5rem !important
	
@media all and (max-width:840px) and (min-width:641px)
	.page-banner
		h1
			font-size 2.5rem !important

@media all and (max-width:640px)
	/* general styles */
		
	body
		font-size 9pt
	
	.content-wrap
		margin-top 20px
	
	/* page banners */
	
	.page-banner
		height 35vh !important
		
		h1 
			width initial !important
			font-size 1.5rem !important
			white-space pre
			
			br
				display none
		
		i
			font-size 2rem !important
			
		.carousel-slide
			&.banner-text
				h1
					width 80%
			
			&.banner-video
				background-size cover !important
				
				#video
					display none
					
				h1
					width 40%
			
			&.banner-image
				.caption
					font-size .8rem
				
				i
					display none !important
	
	/* section header */
	
	.info-header, .page-header
		padding 20px 0
		width 90%
		margin 20px auto 40px
				
	/* page builder classes */
	
	.content-wrap
		.panel-grid-cell
			margin-bottom 20px !important
			
		.panel-grid
			margin-bottom 20px !important
			
		.pull-quote
			width 100% !important
			padding 20px 0 !important
			
		.info-header
			margin-top 50px !important
			width 100%
	

	/* CTA section */
	
	.cta-section
		padding 40px 10% 40px !important
		background $offwhite
		border-top 1px solid $light_grey

