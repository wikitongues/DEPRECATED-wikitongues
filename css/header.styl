	#logo
		margin-left 10px
		height 100%
		
		img
			width auto
			height 100%
	
	.menu-main-navigation-container
		position absolute
		top 50%
		right 10px
		-webkit-transform translateY(-50%)		
		
		ul
			margin 0
			padding 0
			
			li
				display inline-block
				list-style-type none
				margin-right 25px
				
				&:first-of-type
					a
						&:hover,
						&:active 
							color $light_blue
					
					&.current-menu-item
						a
							color $light_blue
							
				&:nth-of-type(2)
					a
						&:hover,
						&:active 
							color $yellow
					
					&.current-menu-item
						a
							color $yellow
							
				&:nth-of-type(3)
					a
						&:hover,
						&:active 
							color $red
					
					&.current-menu-item
						a
							color $red
				
				&:last-of-type
					padding 5px 10px
					margin-right 0
					background $yellow
					
					a, a:visited
						color $white
						letter-spacing .025em
					
				a, a:visited
					font-family $sans_serif
					color $deep_blue
					text-transform uppercase
					font-weight 900
					-webkit-transition color .1s ease-in-out
					-moz-transition color .1s ease-in-out
					-o-transition color .1s ease-in-out
					-ms-transition color .1s ease-in-out
					transition color .1s ease-in-out

body
	&.admin-bar
		header#header
			top 32px
			
@media all and (max-width:640px)
	body
		&.admin-bar
			header#header
				top 46px
				
		header#header
			.menu-main-navigation-container
				left 20%
				overflow-x scroll
				white-space nowrap
				
				&::-webkit-scrollbar
					display none					