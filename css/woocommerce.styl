// WooCommerce
.wcopc
  #opc-messages,
  .woocommerce-info
    display none !important

   form.checkout.woocommerce-checkout
     h3
       display inline-block
     abbr.required
       display none

     #customer_details
        .col-2
          .woocommerce-billing-fields,
          .woocommerce-shipping-fields
            p
              margin-top 35px
              position relative

              input, textarea
                font-size 18px
                font-weight 300
                margin-top 11px
                min-height 32px
                font-family $sansSerif, sans-serif
                color #000
                padding 0 10px 10px 10px
                width 100%
                border none
                border-bottom 1px solid #e5e5e6
                box-sizing border-box

                &:focus
                  outline none

                  & ~ .bar::before,
                  & ~ .bar::after
                    width 50%

                  & ~ .highlight
                    animation inputHighlighter 0.3s ease

                  & ~ label
                    top -11px
                    font-size 12px
                    font-weight 200
                    color #000

                &.used ~ label
                  top -11px
                  font-size 12px
                  font-weight 200

              label
                color #a9a9a9
                font-size 16px
                font-weight 100
                position absolute
                pointer-events none
                left 10px
                top 10px
                transition 0.2s ease all
                top -11px
                font-size 12px
                font-weight 200

     #opc-product-selection
       display inline-block
       width 100%

      ul#checkout-products
        margin-bottom 30px
        padding-left 0

        // &::before
        //  content "How Much Can You Contribute?"
        //  display block
        //  font-family $sansSerif, sans-serif
        //  font-weight 900
        //  font-size 1.17em
        //  margin-bottom 1em

        li
         display inline-block
         margin-right 35px

         &:last-of-type
           margin-right 0

         span.attributes,
         span.dash,
         span.price
           display none

         label
           display inline

           input
            width initial
            margin auto

     .create-account
      display none !important

     abbr.required
      text-decoration none
      border-bottom none

     #order_review
       ul
         list-style-type none
         padding-left 10px

      .opc_order_review
        display none !important

      #payment
        .wc_payment_methods
          margin-bottom 30px
         .wc_payment_method
           margin-top 40px

           &:first-of-type
            margin-top 0

           input.input-radio
            width initial
            display inline-block

           label
            display inline-block

           &.payment_method_paypal
             .about_paypal
               display none
              p
                font-size .7rem
                color #6a7086


           &.payment_method_stripe
             p
              margin-top 35px
              position relative

              input, textarea
                font-size 18px
                font-weight 300
                margin-top 11px
                min-height 32px
                font-family $sansSerif, sans-serif
                color #000
                padding 0 10px 10px 10px
                width 100%
                border none
                border-bottom 1px solid #e5e5e6
                box-sizing border-box

                &:focus
                  outline none

                  & ~ .bar::before,
                  & ~ .bar::after
                    width 50%

                  & ~ .highlight
                    animation inputHighlighter 0.3s ease

                  & ~ label
                    top -11px
                    font-size 12px
                    font-weight 200
                    color #000

                &.used ~ label
                  top -11px
                  font-size 12px
                  font-weight 200

              label
                color #a9a9a9
                font-size 16px
                font-weight 100
                position absolute
                pointer-events none
                left 10px
                top 10px
                transition 0.2s ease all
                top -11px
                font-size 12px
                font-weight 200

        .place-order
          input.submit-button
            font-family $sansSerif
            background $lightBlue
            width 600px
            color white
            padding 20px
            border none
            font-weight 800
            font-size 2rem
            margin-left -30px

@media all and (max-width:640px)
  .wcopc
    form
      &.checkout
        &.woocommerce-checkout
          #payment
            .place-order
              input
                &.submit-button
                  width 122%